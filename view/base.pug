doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title URL Shortner
    link( href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    style 
      include ../static/style.css

  body 
    html
  head
  body
    nav.navbar.navbar-expand-lg.bg-body(data-bs-theme='dark')
      .container-fluid
        a.navbar-brand(href='/') URL Shortner
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
            ul.navbar-nav
              if !user
                li.nav-item
                  a.nav-link.active(aria-current='page', href='/user/signup') Create Account
                li.nav-item
                  a.nav-link.active(aria-current='page', href='/user/login') Login 
              if user 
                li.nav-item.dropdown
                  a.nav-link.dropdown-toggle.active(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                    | #{user.name}
                  ul.dropdown-menu
                    li
                      a.dropdown-item(href='/user/logout') Log Out
    if error
      .container.mt-3 
        .alert.alert-danger(role='alert')
            | #{error}
    block content
    script(src="../script.js") 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
    script(src="https://kit.fontawesome.com/7ed1cffc9b.js" crossorigin="anonymous")