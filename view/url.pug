extends base
block content
        .container.mt-4
            //- .container.mt-2 
            //-     if newURL
            //-         p
            //-             a.link-primary.link-offset-2.link-underline-opacity-25.link-underline-opacity-100-hover(href=`/url/${newURL.shortId}` target="_blank") Your link

            
            form(action="/" method="post") 
                .input-group.mb-3
                    label.input-group-text#inputGroup-sizing-default.bg-info(for="inputURL") Paste URL
                    input.form-control#inputURL(type='text' placeholder="https://www.example.com" name="url" aria-describedby='button-addon2' required )
                    //- button#button-addon2.btn.btn-primary(type='submit' onclick()="copyToClipBoard") Generate
                .mb-3
                    label.form-label(for='basic-url') Customised URL (Optional)
                    .input-group
                        span#basic-addon3.text-secondary-emphasis.input-group-text.bg-info linkziprr.vercel.app/
                        input#basic-url.form-control(type='text',placeholder="favourite-Link" aria-describedby='basic-addon3 basic-addon4', name = "cutomisedId")
                        button#button-addon2.btn.btn-primary(type='submit' onclick()="copyToClipBoard") Generate
                   



            .container.table-responsive
                if allURL
                    table(class="table  table-striped table-bordered ") 
                        thead 
                            tr.table-dark
                                th S.No.
                                th Short Id 
                                th Redirect URL
                                th Copy
                                th Delete 
                                th Total Clicks 
                        tbody
                        -var index= 1
                        each url in allURL 
                            tr.table-light
                                td= index++ 
                                    |.
                                td.shortId  #{url.shortId}
                                td
                                    a.redirectLink.icon-link.icon-link-hover(href=`${url.redirectUrl}` target="_blank")  #{url.redirectUrl}
                                td#clipBoard
                                    button.clipboardButton
                                        i.fa-regular.fa-clipboard(style="color: #0d6efd; font-size: 20px;")
                                td#delete
                                    button.deleteButton
                                        i.fa-regular.fa-trash-can(style='color: #0d6efd;font-size: 20px;')
                                td= url.visitHistory.length
                        
